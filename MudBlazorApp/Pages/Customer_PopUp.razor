@namespace MudBlazorApp.Pages
@using MudBlazorApp.Data

<MudDialog @bind-IsVisible="@visible">
    <DialogContent>
        <MudCard Elevation="10">
            <MudGrid>
                <MudItem xs="12">
                    <MudCardHeader>
                        <CardHeaderContent>
                            <MudText Typo="Typo.h6">
                                @(customer.Id > 0 ? "Update Customer":"Save Customer")
                            </MudText>
                        </CardHeaderContent>
                    </MudCardHeader>
                    <MudCardContent>
                        <MudTextField @bind-Value="customer.FirstName" Label="First Name" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
                        <MudTextField @bind-Value="customer.LastName" Label="Last Name" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
                        <MudTextField @bind-Value="customer.PhoneNumber" Label="Phone Number" Variant="Variant.Text" Margin="Margin.Normal"></MudTextField>
                        <br />
                        <MudButton Variant="Variant.Filled" Color="Color.Success" @onclick="OnClickCallback">                            
                            @(customer.Id > 0 ? "Update":"Save")
                        </MudButton>
                    </MudCardContent>
                </MudItem>
            </MudGrid>
        </MudCard>
    </DialogContent>
    <DialogActions>
        <MudButton @onclick="ModalCancelCallBack">Cancel</MudButton>
        <MudButton Color="Color.Primary" @onclick="ModalSubmitCallBack">Ok</MudButton>
    </DialogActions>
</MudDialog>

@code {
    //Parameter Passing Area

    [Parameter]
    public Customer customer { get; set; } // Passing the value for textbox

    [Parameter]
    public bool visible { get; set; } = false; // Modal visable false

    [Parameter]
    public EventCallback<MouseEventArgs> OnClickCallback { get; set; } // Modal button click for Save / Update

    [Parameter]
    public EventCallback<MouseEventArgs> ModalSubmitCallBack { get; set; } // Modal default Ok button

    [Parameter]
    public EventCallback<MouseEventArgs> ModalCancelCallBack { get; set; } // Modal default Cancel button
}
